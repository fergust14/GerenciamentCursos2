@using GerenciamentoCursos.Models
@{ ViewData["Title"] = "Home Page"; }

<div class="row">
    <div class="col-md-6">
        <h2>Alguns dos cursos disponíveis em nossa plataforma:</h2>
        @foreach (var oferta in ViewBag.Cursos)
        {
<tr>
    <td>
        <li> @oferta.Nome</li>
    </td>
</tr>}
    </div>
    <div class="col-md-6">
        <h2>Algumas das cidades em que nossos cursos estão disponíveis:</h2>
        @foreach (var oferta in ViewBag.Localidades)
        {
<tr>
    <td>
        <li> @oferta.Cidade</li>
    </td>
</tr>}
    </div>

    <div class="col-lg-12">
        <h2>Algumas das ofertas cursos disponíveis no momento:</h2>
        <table class="table">
            <thead>
                <tr>                    
                    <th>
                        Nome do Curso
                    </th>
                    <th>
                        Tipo do Curso
                    </th>
                    <th>
                        Cidade
                    </th>
                    <th>
                        Estado
                    </th>
                    <th>
                        Status do Curso
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var oferta in ViewBag.Localidades)
                {
                    @if (oferta.Status == "Incrições Abertas")
                    {
                        <tr>                            
                            <td>
                                @oferta.NomeCurso
                            </td>
                            <td>
                                @oferta.TipoCurso
                            </td>
                            <td>
                                @oferta.Cidade
                            </td>
                            <td>
                                @oferta.Estado
                            </td>
                            <td>
                                @oferta.Status
                            </td>
                        </tr>
                    }
                 }
            </tbody>
        </table>
    </div>